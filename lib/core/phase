#ifndef PHASE_HPP_
#define PHASE_HPP_

#include <common>

namespace bolt
{

class Phase
{
public:
	Phase() {}
	virtual ~Phase() {}

	virtual bool initialize() = 0;
	virtual bool cleanup() = 0;

	virtual void update( MicroSeconds delta ) = 0;
};

} /* namespace bolt */
#endif /* PHASE_HPP_ */
