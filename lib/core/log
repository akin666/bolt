
#ifndef _LOG_HEAD_

#include "log.hpp"
#include <singleton>

#define LOG_ERROR 	if( bolt::Singleton<bolt::Log>::get() ) bolt::Singleton<bolt::Log>::get()->error() << __FILE__ << ">" << __FUNCTION__ << ":" << __LINE__
#define LOG_WARNING if( bolt::Singleton<bolt::Log>::get() ) bolt::Singleton<bolt::Log>::get()->warning()
#define LOG_LOG 	if( bolt::Singleton<bolt::Log>::get() ) bolt::Singleton<bolt::Log>::get()->log()
#define LOG_OUT 	if( bolt::Singleton<bolt::Log>::get() ) bolt::Singleton<bolt::Log>::get()->out()

#define LOG_SYSTEM_ERROR LOG_ERROR

// LOG_ERROR << "Head exploded" << std::endl;

#endif // _LOG_HEAD_
